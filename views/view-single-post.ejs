<%-include('includes/header');%>
  <!-- header ends here -->
  
  <div class="container py-md-5 container--narrow">
    <div class="d-flex justify-content-between">
      <h2><%=title%></h2>
      <% if(username == author){%>
      <span class="pt-2">
        <a href="/edit/<%=id%>" class="text-primary mr-2" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></a>
        <form class="delete-post-form d-inline" action="/delete/<%=id%>" method="POST">
          <input type="hidden" name = "_csrf" value="<%=csrfToken%>">
          <button class="delete-post-button text-danger" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash"></i></button>
        </form>
      </span>
      <%}%>
    </div>
      
    <p class="text-muted small mb-4">
      <a href="/profile/<%=author%>"><img class="avatar-tiny" src="<%=useravatar%>"></a>
      Posted by <a href="/profile/<%=author%>"><%=author%></a> on <%=date.getMonth()+1%>/<%=date.getDate()%>/<%=date.getFullYear()%></p>

    <div class="body-content">
      <p><%-filter(body)%></p>
    </div>

  </div>
  
  <!-- footer begins -->
  <%-include('includes/footer');%>