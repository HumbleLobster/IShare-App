<%- include('includes/header'); %>
  <!-- header ends here -->

   <% if(feeds.length){%>
      <div class="container py-md-5 container--narrow">
        <h2 class="text-center mb-4">The Latest From Those You Follow</h2>
        <div class="list-group">
          <% feeds.forEach(feed => { %>
            <a href="/post/<%=feed._id%>" class="list-group-item list-group-item-action">
              <img class="avatar-tiny" src="<%=feed.avatar%>">
              <strong><%=feed.title%></strong>
              <span class="text-muted small">by <%=feed.username%> on <%=feed.date.getDate()%>/<%=feed.date.getMonth()%>/<%=feed.date.getFullYear()%></span>
            </a>
          <% }); %>
        </div>
      </div>

    <% } else { %>
      <div class="container py-md-5 container--narrow">
        <div class="text-center">
          <h2>Hello <strong><%=username%></strong>, your feed is empty.</h2>
          <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
        </div>  
      </div>
     <% }%>
  

  
  <!-- footer begins -->
  <%- include('includes/footer'); %>